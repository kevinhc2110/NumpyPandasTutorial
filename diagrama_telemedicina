// Plataforma de Telemedicina Simplificada
digraph {
	Usuario [label="Usuario
+ username: String
+ email: String
+ registrar()
+ conectarDispositivo()"]
	DispositivoInteligente [label="Dispositivo Inteligente
+ tipo: String
+ signosVitales: JSON
+ enviarDatos()"]
	HistorialDeSalud [label="Historial de Salud
+ datos: JSON
+ almacenarDatos()
+ mostrarHistorial()"]
	InteligenciaArtificial [label="Inteligencia Artificial
+ algoritmo: String
+ analizarDatos()
+ predecirRiesgos()"]
	Medico [label="Médico
+ nombre: String
+ especialización: String
+ revisarHistorial()
+ darRetroalimentación()"]
	CitasMedicas [label="Citas Médicas
+ programarCita()
+ realizarConsulta()"]
	Notificaciones [label="Notificaciones
+ mensaje: String
+ enviarAlerta()"]
	Usuario -> DispositivoInteligente [label="Conectar Dispositivo"]
	DispositivoInteligente -> HistorialDeSalud [label="Enviar Signos Vitales"]
	HistorialDeSalud -> InteligenciaArtificial [label="Almacenar y Analizar Datos"]
	InteligenciaArtificial -> Medico [label="Enviar Predicciones"]
	Medico -> HistorialDeSalud [label="Revisar y Actualizar Historial"]
	Usuario -> CitasMedicas [label="Programar Cita"]
	CitasMedicas -> Medico [label="Realizar Consulta"]
	HistorialDeSalud -> Notificaciones [label="Enviar Alertas"]
	Usuario -> Notificaciones [label="Recibir Alertas"]
}
